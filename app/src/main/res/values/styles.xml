<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="ResutlTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="@android:windowAnimationStyle">@style/myact</item>
    </style>

    <style name="myact">

        <item name="@android:activityOpenEnterAnimation">@anim/right_enter</item>

        <item name="@android:activityOpenExitAnimation">@anim/right_exit</item>

        <!--<item name="@android:activityCloseEnterAnimation">@anim/right_exit</item>-->

        <item name="@android:activityCloseExitAnimation">@anim/right_exit</item>

    </style>

    <style name="MainTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="@android:windowAnimationStyle">@style/mtwo</item>
    </style>

    <style name="mtwo">
        <item name="android:activityOpenExitAnimation">@anim/right_exit</item>
        <!--<item name="android:activityCloseEnterAnimation">@anim/act_lefenter</item>-->
        <item name="android:activityCloseExitAnimation">@anim/right_exit</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
